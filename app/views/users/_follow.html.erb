<%= form_for(current_user.mutual_relationships.build) do |f| %>
  <% if current_user == @user %>
  <div><%= hidden_field_tag :followed_id, current_user.id %></div>  
  <% else %>
    <div><%= hidden_field_tag :followed_id, @user.id %></div> 
  <% end %>  
  <%= f.submit "Follow #{@user.first_name}" %>
<% end %>