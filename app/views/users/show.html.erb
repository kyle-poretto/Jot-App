<%= render 'shared/stats' %>
	<% if current_user == @user %>
		<br>
		<%= link_to 'Edit Account', edit_registration_path(current_user) %>
	<% else %>
		<%= render 'users/follow_form' %>
	<% end %>
		<%= @user.full_name%>
		<br>

		<% if @user.jewels.any? %>
			<% @user.jewels.each do |jewel|  %>
			<br>
			<%= jewel.created_at.strftime("%m-%d-%Y") %>
			<br>
			<%= jewel.body %>

		<% end %>
		<% else %>
			He does not have any jots
	<% end %>
