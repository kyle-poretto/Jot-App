<% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
  <% end %>

<% if current_user %>
  <%= render 'shared/stats' %>

  <%= render 'shared/jot_actions', locals: {jot: @jot} %>

  <% if current_user.low_following_count? %>
    <%= current_user.most_popular.each do |user|%>
        <br>
        <% if !current_user.following?(user)%>
          <%= user.first_name %>
          <%= user.last_name%>
          <%= user.jewels.take(2).each do |jewel| %>
            <%= jewel.body %>
            <%= render 'users/follow_form' %>
          <% end %>
        <% end %>
        <br>
        
      <% end %>
      <% else %>
        <%= current_user.most_popular.each do |user|%>
          <%= user.jewels.each do |jewel|%>
          <%= jewel.body %>
          <% end %>
    <% end %>
  <% end %>
<% end %>
    
    
